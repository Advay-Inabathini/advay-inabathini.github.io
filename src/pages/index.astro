---
import MainLayout from '../layouts/MainLayout.astro';
import PrimaryNav from '../components/PrimaryNav.astro';
import LandingPageGrid from '../components/LandingPageGrid.astro';
---
<MainLayout 
  title="Advay Inabathini | Portfolio" 
  description="The official portfolio of Advay Inabathini, showcasing skills in photography, design, and technology."
>
  <div class="bg-black font-mono text-white">
    <!-- 
      Hero Section:
      This section now uses a relative container to position the intro text and nav buttons independently.
    -->
    <section class="container mx-auto px-4 md:px-8 min-h-screen">
      <!-- IntroText: Natural positioning at top -->
      <div class="pt-20 xl:pt-32 text-lg space-y-2">
        <p>Hello there,</p>
        <p>I am Advay Inabathini..</p>
        <p>You have reached my portfolio website which is currently under construction</p>
        <p>I passionately partake in the following:</p>
      </div>
      <!-- PrimaryNav -->
      <!-- PrimaryNav: Gets its own container with vertical centering -->
      <div class="h-96 flex items-center justify-center">
        <div class="w-full max-w-3xl">
          <PrimaryNav />
        </div>
      </div>
    </section>

    <!-- 
      Grid Section:
      A negative top margin is used to pull the grid up, creating the overlap effect.
    -->
    <section class="container mx-auto pb-16 -mt-24 xl:-mt-36 relative">
      <LandingPageGrid />
    </section>
  </div>
</MainLayout>
