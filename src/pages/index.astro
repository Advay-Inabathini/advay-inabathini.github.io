---
import MainLayout from '../layouts/MainLayout.astro';
import PrimaryNav from '../components/PrimaryNav.astro';
import LandingPageGrid from '../components/LandingPageGrid.astro';
import Footer from '../components/Footer.astro';
---
<MainLayout 
  title="Advay Inabathini | Portfolio" 
  description="The official portfolio of Advay Inabathini, showcasing skills in photography, design, and technology."
>
  <div class="bg-black text-white">
    <!-- 
      Hero Section: 
      This section fills the viewport and contains the main intro and navigation.
      `flex` and `justify-center` are used to vertically center the content.
    -->
    <section class="container mx-auto px-4 md:px-8 flex flex-col justify-center min-h-screen">
      <div class="max-w-md">
        <!-- IntroText -->
        <div class="font-mono text-xl mb-8 space-y-2">
          <p>Hello there,</p>
          <p>I am Advay Inabathini..</p>
          <p>How can I help you?</p>
        </div>
        
        <!-- PrimaryNav -->
        <PrimaryNav />
      </div>
    </section>

    <!-- 
      Grid Section: 
      This section displays the decorative photo grid below the hero.
    -->
    <section class="container mx-auto px-4 md:px-8 py-16">
      <LandingPageGrid />
    </section>
  </div>

  <!-- Footer Section -->
  <Footer />
</MainLayout>
